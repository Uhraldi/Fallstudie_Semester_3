<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bestellzusammenfassung"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.patsc.fallstudie.Activities.BestellzusammenfassungActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bestellzsmfassung_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Personalwesen: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_designer_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personalwesen_output"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Zeitarbeiter: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_armband_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zeitarbeiter_output"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Forschungsinvestition:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_uhrwerk_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forschung_output"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Marketingkanäle:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_gehaeuse_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/marketing_output"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Armbandmaterial:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_versandart_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/armband_output"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Uhrwerk:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_wasserdichtheit_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uhrwerk_output"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Gehäusematerial:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_zusammenbau_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gehaeuse_output"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Bezahlarten: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_werbung_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bezahlart_output"
                android:layout_margin="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="@string/bestellzsmfassung_produktionsvolumen_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_kaufvolumen_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/produktionsvolumen_output"
                android:layout_margin="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="@string/bestellzsmfassung_verkaufspreis_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_verkaufspreis_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verkaufspreis_output"
                android:layout_margin="5dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Gesamtkosten:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bestellzsmfassung_gesamtpreis_textview"
                android:layout_margin="5dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gesamtpreis_output"
                android:layout_margin="5dp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:text="@string/bestellzsmfassung_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bestellzsmfassung_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Bestätige Auftrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bestellzsmfassung_button"
        android:onClick="goToNextActivity"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

</RelativeLayout>
</LinearLayout>