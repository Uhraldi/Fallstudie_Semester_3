<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/activity_e1_forschung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Activities.ForschungActivity"
        >


        <TextView
            android:text="GAME OVER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"
            android:id="@+id/textView10"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text="Ihr Kontostand reicht leider nicht mehr aus um einen weiteren Produktionsauftrag zu initialisieren. Sie haben sich verschuldet und müssen Insolvenz anmelden. Sie haben dennoch die Möglichkeit ein neues Spiel (mit Anfangswerten) zu starten."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:id="@+id/textView12" />

        <Button
            android:text="neues spiel starten?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:id="@+id/button2"
            android:onClick="neuesSpiel"/>
    </RelativeLayout>

</LinearLayout>
